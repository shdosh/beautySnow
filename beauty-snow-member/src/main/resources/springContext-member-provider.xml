<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd  
        http://code.alibabatech.com/schema/dubbo  
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd  
        ">
	<!-- 具体的实现bean -->        
	<bean id="userService" class="com.shdosh.member.user.service.impl.UserServiceImpl"/>
	
	<!-- 声明需要暴露的服务接口 -->
	<dubbo:service interface="com.shdosh.member.user.service.IUserService" ref="userService"/>
	
	<!-- 提供方provider信息，用于计算依赖关系 -->
	<dubbo:application name="member_provider"/>
	
	<!-- 使用zookeeper注册中心暴露服务地址 -->
	<dubbo:registry address="zookeeper://192.168.10.202:2181"/>
	
	<!-- 用dubbo协议在20880端口暴露服务 -->
	<dubbo:protocol name="dubbo" port="20880" host="192.168.10.202"/>
</beans>